<div id="Div_modalNewUserCreated" class="modal hide fade">
	<div class="modal-header">
		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">
		</button>
		<h3>New</h3>
	</div>
	<div class="modal-body">
		<p>
			A new user has been created. you will redirect to post list site.
		</p>
	</div>
	<div class="modal-footer">
		<a href="#" class="btn" data-dismiss="modal" aria-hidden="true" >Close</a>
	</div>
</div>

<form id="Frm_NewUser" method="#">
	<fieldset>
		<legend>
			New User
		</legend>
		<label>E-mail</label>
		<input id="Txt_Email" name="Txt_Email" type="text" placeholder="E-mail">
		<label>Username</label>
		<input id="Txt_NewUsername" name="Txt_NewUsername" type="text" placeholder="Username">
		<label>Password</label>
		<input id="Txt_password" name="Txt_password" type="password" placeholder="Type your password">

	</fieldset>
</form>

<button id="Btn_SaveNewUser" class="btn btn-primary btn-small">
	Save
</button>